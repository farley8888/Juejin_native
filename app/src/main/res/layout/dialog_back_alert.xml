<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        style="@style/JJ.Label.Dark.Max"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/exit_tip"
        android:gravity="center"
        android:text="你有奖励待领取"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_currentCar"
        style="@style/JJ.Label.Dark.Middle"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:paddingHorizontal="10dp"
        android:text="大众就这眼前" />

    <TextView
        android:id="@+id/tv_dotask_rewardCar"
        style="@style/JJ.Label.Dark.Middle"
        android:layout_marginTop="3dp"
        android:paddingHorizontal="10dp"
        android:singleLine="true"
        android:text="天天做任务" />

    <ImageView
        android:id="@+id/img_rewardCar"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/btn_toGet"
        style="@style/JJ.Label.Dark.Middle"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="去领取>"
        android:textColor="@color/yellow_more" />

    <LinearLayout
        style="@style/JJ.WrapContent"
        android:gravity="center_vertical">

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_exit"
            style="@style/JJ.Label.Light.Small"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_back"
            android:gravity="center"
            android:background="@drawable/button_shape_exit"
            android:text="不要了，退出"
            tools:ignore="MissingConstraints" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/shape_yellow_radius"
            android:text="返回"
            android:textSize="13sp"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_exit"
            tools:ignore="MissingConstraints" />
    </android.support.constraint.ConstraintLayout>

