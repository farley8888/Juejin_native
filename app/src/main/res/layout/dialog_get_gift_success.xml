<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="@drawable/get_gifts_success_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="你获得了"
        android:textColor="@color/gift_txtColor"
        android:textSize="24sp" />

    <com.juejinchain.android.ui.view.StrokeTextView
        android:id="@+id/tv_juejinBao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="5个掘金宝"
        android:textColor="#FEDE00"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="（￥5元现金）"
        android:textColor="@color/gift_txtColor"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="70dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#F6E0A6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="将发放到钱包中，请前往确认"
        android:textColor="@color/gift_txtColor"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_lingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人已领取"
            android:textColor="#f49f2a" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_seeGift"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/layer_see_gift_button"
        android:text="去查看"
        android:textColor="#E50012" />

</LinearLayout>
