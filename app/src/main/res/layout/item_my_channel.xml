        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/delete_icon" />

    <!-- android:background="@mipmap/ic_channel_edit" -->

</RelativeLayout>