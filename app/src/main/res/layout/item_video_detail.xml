<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:lines="2"
        android:text="TextViewafal;  拉上放大"
        android:layout_marginLeft="@dimen/listView_side_margin"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_video"
        />

    <TextView
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:textColor="@color/text_darker_lighter"
        android:text="TextView来源;lfa;ljasf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
         />


    <TextView
        android:id="@+id/tv_playTimes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_darker_lighter"
        android:text="1000次播放"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_source"
        app:layout_constraintEnd_toStartOf="@+id/img_video"
        app:layout_constraintStart_toEndOf="@+id/tv_source" />


    <ImageView
        android:id="@+id/img_video"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:textSize="10sp"
        android:text="TextView"
        android:background="@drawable/video_times_shape"
        app:layout_constraintEnd_toEndOf="@+id/img_video"
        app:layout_constraintBottom_toBottomOf="@+id/img_video"
         />


</android.support.constraint.ConstraintLayout>