<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="@drawable/shape_reward_popup_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_rewardTitle"
        style="@style/JJ.Label.Light.Middle"
        android:layout_marginTop="10dp"
        android:text="时段奖励领取成功"
        android:textColor="@color/white"
        />
    <!-- 奖励到账了 -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/reward_prompt"/>

    <TextView
        android:id="@+id/tv_reward_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+00金币"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textColor="#fecf39"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_shareReward"
        style="@style/JJ.Label.Light.Small"
        android:text="分享文章奖励"
        android:visibility="gone"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_shareReward_prompt"
        style="@style/JJ.Label.Light.Small"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:text="将复制的链接发送到微信群，能一键锁粉赚掘金宝"
        android:textColor="@color/white"
        />


</LinearLayout>
